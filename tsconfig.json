{
"compilerOptions": {
    "types": ["bluebird", "node", "express", "lodash"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2017", "dom" ],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "rootDir": "src/",
    "outDir": "compiled/"
},
"compileOnSave": true,
"include": [
    "src/**/*"
],
"exclude": [
    "node_modules",
    "**/*.spec.ts",
    "compiled"
]}
